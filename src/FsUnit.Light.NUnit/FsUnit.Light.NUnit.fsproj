<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <WarningsAsErrors>3239;0025;3261</WarningsAsErrors>
        <Nullable>enable</Nullable>
        <PackageId>FsUnit.Light.NUnit</PackageId>
        <Title>FsUnit.Light.NUnit</Title>
        <RootNamespace>FsUnit.Light</RootNamespace>
        <AssemblyName>FsUnit.Light.NUnit</AssemblyName>
        <Company>F# community</Company>
        <Description>F# friendly wrappers around native NUnit asserts</Description>
        <RepositoryUrl>https://github.com/Lanayx/FsUnit.Light</RepositoryUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageProjectUrl>https://github.com/Lanayx/FsUnit.Light/tree/main/src/FsUnit.Light.NUnit</PackageProjectUrl>
        <RepositoryType>git</RepositoryType>
        <PackageTags>FsUnit;NUnit;F#;FSharp</PackageTags>
        <Authors>Vladimir Shchur and contributors</Authors>
        <Copyright>Copyright (c) Vladimir Shchur 2025</Copyright>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <Version>0.2.0</Version>
        <PackageVersion>0.2.0</PackageVersion>
        <PackageReleaseNotes>shouldFailWithMessage and shouldEquivalent</PackageReleaseNotes>
    </PropertyGroup>

    <ItemGroup>
        <Compile Include="Library.fs" />
        <None Include="README.md" Pack="true" PackagePath="\" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="NUnit" Version="4.3.2" />
    </ItemGroup>

</Project>
