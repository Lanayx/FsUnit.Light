<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <WarningsAsErrors>3239;0025;3261</WarningsAsErrors>
        <Nullable>enable</Nullable>
        <PackageId>FsUnit.Light.xUnit</PackageId>
        <Title>FsUnit.Light.xUnit</Title>
        <RootNamespace>FsUnit.Light</RootNamespace>
        <AssemblyName>FsUnit.Light.Xunit</AssemblyName>
        <Company>F# community</Company>
        <Description>F# friendly wrappers around native xUnit asserts</Description>
        <RepositoryUrl>https://github.com/Lanayx/FsUnit.Light</RepositoryUrl>
        <PackageIcon>fsunit-light-128.png</PackageIcon>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageProjectUrl>https://github.com/Lanayx/FsUnit.Light/tree/main/src/FsUnit.Light.Xunit</PackageProjectUrl>
        <RepositoryType>git</RepositoryType>
        <PackageTags>FsUnit;xUnit;F#;FSharp</PackageTags>
        <Authors>Vladimir Shchur and contributors</Authors>
        <Copyright>Copyright (c) Vladimir Shchur 2025</Copyright>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
        <Version>1.0.0</Version>
        <PackageVersion>1.0.0</PackageVersion>
        <PackageReleaseNotes>Package icon added</PackageReleaseNotes>
    </PropertyGroup>

    <ItemGroup>
        <None Include="..\..\images\fsunit-light-128.png" Pack="true" PackagePath="\" />
        <None Include="README.md" Pack="true" PackagePath="\" />
        <Compile Include="Library.fs" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="xunit.v3.assert" Version="2.0.3" />
    </ItemGroup>

</Project>
